! ------------------------------------------------------------------------------
!                                   XTerm
! ------------------------------------------------------------------------------
XTerm*renderFont: true
XTerm*faceName: FantasqueSansMono
XTerm*faceSize: 15
xterm*termName: codeschool
XTerm*locale: true
XTerm*metaSendsEscape: true
Xterm*saveLines: 4096
xterm*VT100.geometry: 80x28
xterm*boldFont: FantasqueSansMono-Bold-15

! special
*.foreground:   #98d1ce
*.background:   rgba(63, 63, 63, 0.8)
*.cursorColor:  #98d1ce

! black
*.color0:       #0a0f14
*.color8:       #3b5959

! red
*.color1:       #c33027
*.color9:       #d26939

! green
*.color2:       #26a98b
*.color10:      #081f2d

! yellow
*.color3:       #edb54b
*.color11:      #245361

! blue
*.color4:       #195465
*.color12:      #ad2143

! magenta
*.color5:       #4e5165
*.color13:      #888ba5

! cyan
*.color6:       #33859d
*.color14:      #599caa

! white
*.color7:       #98d1ce
*.color15:      #d3ebe9

! ------------------------------------------------------------------------------
!                               ROFI Color theme
! ------------------------------------------------------------------------------
    rofi.color-enabled: true
    rofi.color-window: #172025, #172025, #1e2529
    rofi.color-normal: #172025, #c1c1c1, #172025, #394249, #ffffff
    rofi.color-active: #172025, #80cbc4, #172025, #394249, #80cbc4
    rofi.color-urgent: #172025, #ff1844, #172025, #394249, #ff1844

    rofi.background:  #212121
    rofi.foreground:  #eee8d5
    rofi.highlightbg: #b58900
    rofi.highlightfg: #ffffff
    rofi.bordercolor: #678698
    rofi.padding: 1
    rofi.lines: 10
    rofi.borderwidth: 1
    rofi.opacity: 100
    rofi.font: San Francisco System Display Bold 12
    rofi.location: 7
    rofi.yoffset: 0
    rofi.xoffset: 0
    rofi.width: 100
    rofi.fixed_num_lines: 1
    rofi.hmode: false
    rofi.terminal: termite
    rofi.ssh-set-title: false

